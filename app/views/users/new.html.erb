<%= form_with model: @user, url: users_path, method: :post do |f| %>
<%= f.label :gymsite_id, 'Gym to Register' %>
<%= f.select :gymsite_ids, Gymsite.all.collect {|x| [x.surname, x.id]} %><br>
<%= f.label :first_name, 'First Name'%>
<%= f.text_field :first_name %><br>
<%= f.label :last_name, 'Last Name' %>
<%= f.text_field :last_name %><br>
<%= f.label :email, 'Email' %>
<%= f.text_field :email %><br>
<%= f.label :role_id, 'User Role' %>
<%= f.select :role_ids, Role.all.collect {|x| [x.role_name, x.id]} %><br>
<%= f.submit %>
<% end %>

<%= link_to 'Index', users_path %>
